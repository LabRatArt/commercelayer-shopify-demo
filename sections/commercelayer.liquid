{% assign country_code = request.locale.iso_code | split: '-' | last %}
{% assign country_key = country_code | prepend: 'COUNTRY_' %}
{% assign market_id = shop.metafields.markets[country_key] %}

<div>Language: {{ language_code }}</div>
<div>Country: {{ country_code }}</div>

<!-- Config -->
<div
  id="clayer-config"
