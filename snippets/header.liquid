<header class="p-6 md:border-b lg:px-10 xl:mb-24 xl:px-0">
  <div class="flex items-center">
    <a href="/" class="grow flex items-center hover:opacity-75">
      <h1 class="text-xl font-semibold mr-2">MY GLOBAL BRAND</h1>
      {% unless request.locale.primary %}
        {% assign country_code = request.locale.iso_code | split: '-' | last %}
        {% render "country-flag", country_code: country_code %}
      {% endunless %}
    </a>
    {% unless request.locale.primary %}
      <a href="/{{request.locale.iso_code}}/cart" class="hover:opacity-75">
        <span class="font-semibold mr-2 hidden md:inline">Shopping cart</span>
        <span class="clayer-shopping-bag-items-count bg-red-600 text-white px-2 py-1 rounded">0</span>
      </a>
    {% endunless %}
  </div>
</header>